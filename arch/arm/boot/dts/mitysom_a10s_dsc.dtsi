#include "socfpga_arria10.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Critical Link MitySOM-A10S-DSC";
	compatible = "altr,socfpga-arria10", "altr,socfpga";

	aliases {
		ethernet0 = &gmac0;
		serial0 = &uart1;
	};

	chosen {
		bootargs = "earlyprintk";
		stdout-path = "serial0:115200n8";
	};

	memory@0 {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x40000000>; /* 1GB */
	};

	soc {
		clkmgr@ffd04000 {
			clocks {
				osc1 {
					clock-frequency = <50000000>;
				};
			};
		};
	};
};

&spi1 {
	/* status = "okay"; */

	resource-manager@0 {
		compatible = "altr,a10sr";
		reg = <0>;
		spi-max-frequency = <100000>;
		/* low-level active IRQ at GPIO1_5 */
		interrupt-parent = <&portb>;
		interrupts = <5 IRQ_TYPE_LEVEL_LOW>;
		interrupt-controller;
		#interrupt-cells = <2>;

		a10sr_gpio: gpio-controller {
			compatible = "altr,a10sr-gpio";
			gpio-controller;
			#gpio-cells = <2>;
		};

		a10sr_rst: reset-controller {
			compatible = "altr,a10sr-reset";
			#reset-cells = <1>;
		};

		ps_alarm {
			compatible = "altr,a10sr-hwmon";
		};
	};
};

&i2c0 {
	status = "okay";

	/* start at 100 KHz */
	clock-frequency = <100000>;
	/* TODO - not sure if we need to adjust these */
	/* i2c-sda-falling-time-ns = <6000>; */
	/* i2c-scl-falling-time-ns = <6000>; */

	/* factory config EEPROM */
	eeprom@50 {
		compatible = "atmel,24c16";
		reg = <0x50>;
		pagesize = <16>;
	};

	/* OnBoard Abracon RTC */
	rtc@69 {
		compatible = "abracon,ab1805";
		reg = <0x69>;
	};

	/* OnBoard Temp Sensor (this may just get probed / detected) */
	temp@18 {
		compatible = "lm95235";
		reg = <0x18>;
	};

};

/* console port */
&uart1 {
	status = "okay";
};

/* On-board USB 2.0 OTG PHY */
&usb1 {
	status = "okay";
};

&watchdog1 {
	status = "okay";
};

/* On-board micro-SD card */
&mmc {
	status = "okay";
	num-slots = <1>;
	cap-sd-highspeed;
	broken-cd;
	bus-width = <4>;
};

/* ECC for MMC card DMAs */
&eccmgr {
	sdmmca-ecc@ff8c2c00 {
		compatible = "altr,socfpga-sdmmc-ecc";
		reg = <0xff8c2c00 0x400>;
		altr,ecc-parent = <&mmc>;
		interrupts = <15 IRQ_TYPE_LEVEL_HIGH>,
			     <47 IRQ_TYPE_LEVEL_HIGH>,
			     <16 IRQ_TYPE_LEVEL_HIGH>,
			     <48 IRQ_TYPE_LEVEL_HIGH>;
	};
};

&gpio0 {
	status = "okay";
};

&usbphy0 {
	reset-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
};

